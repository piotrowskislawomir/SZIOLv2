<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#ffffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="239dp"
        android:text="New Text"
        android:id="@+id/TV_card_order_unpin"
        android:layout_marginTop="30dp"
        android:paddingLeft="60dp"
        android:paddingTop="30dp"
        android:textSize="22dp"
        android:layout_weight="0.12"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Odepnij zlecenie"
        android:id="@+id/BT_card_unpin"
        android:onClick="unpinOrderOnClick"
        android:background="#e5070c1d"
        android:textColor="#ffffffff"
        android:layout_gravity="center_horizontal"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Zacznij realizowaÄ‡"
        android:id="@+id/button14"
        android:onClick="executeOrderOnClick"
        android:background="#e5070c1d"
        android:textColor="#ffffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Zrealizowano"
        android:id="@+id/button15"
        android:onClick="closeOrderOnClick"
        android:background="#e5070c1d"
        android:textColor="#ffffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />
</LinearLayout>