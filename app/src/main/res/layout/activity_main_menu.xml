<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@android:color/darker_gray">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="vertical"
        android:background="@android:color/darker_gray"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="MÓJ KOSZYK"
            android:id="@+id/button8"
            android:background="#ffff6d2b"
            android:onClick="myCardMenuButtonOnClick"
            android:textColor="#ffffffff"
            android:layout_marginTop="70dp" />

        <Button
            android:layout_width="386dp"
            android:layout_height="80dp"
            android:text="Zlecenia"
            android:id="@+id/button6"
            android:background="#ffff6d2b"
            android:textColor="#ffffffff"
            android:onClick="orderMenuButtonOnClick"
            android:layout_marginTop="30dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Klienci"
            android:id="@+id/button5"
            android:background="#ffff6d2b"
            android:onClick="clientMenuButtonOnClick"
            android:textColor="#ffffffff"
            android:layout_weight="0.20"
            android:layout_marginTop="30dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Twój zespół"
            android:id="@+id/button7"
            android:background="#ffff6d2b"
            android:textColor="#ffffffff"
            android:layout_marginTop="30dp"
            android:onClick="teamOrders" />

    </LinearLayout>
</LinearLayout>